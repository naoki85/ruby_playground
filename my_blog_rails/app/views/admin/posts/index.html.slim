h1.siimple-h1 Posts

.siimple-row.mb-10
  = link_to '新規', new_admin_post_path, class: 'siimple-btn siimple-btn--green'

.siimple-row.mb-10
  = paginate @posts

.siimple-table.siimple-table--hover
  .siimple-table-header
    .siimple-table-row
      .siimple-table-cell ID
      .siimple-table-cell Title
      .siimple-table-cell Image
      .siimple-table-cell Published At
      .siimple-table-cell
  .siimple-table-body
    - @posts.each do |post|
      .siimple-table-row
        .siimple-table-cell = post.id
        .siimple-table-cell = post.title
        .siimple-table-cell = image_tag post.post_image_path, width: '100px'
        .siimple-table-cell = post.published_at.strftime('%Y-%m-%d')
        .siimple-table-cell
          = link_to '詳細', admin_post_path(post), class: 'siimple-btn siimple-btn--blue'
          = link_to '編集', edit_admin_post_path(post), class: 'siimple-btn siimple-btn--yellow'
          = link_to '削除', admin_post_path(post), method: :delete, class: 'siimple-btn siimple-btn--red'

.siimple-row.mb-10
  = paginate @posts
